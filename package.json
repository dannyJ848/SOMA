{
  "name": "@biological-self/content",
  "version": "1.0.0",
  "description": "Medical educational content aggregation system for Biological Self",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "extract": "node --experimental-vm-modules dist/extract.js",
    "validate": "node --experimental-vm-modules dist/validate.js",
    "extract:openstax": "npx ts-node extractors/openstax_playwright.ts",
    "extract:pathology": "npx ts-node extractors/pathology_outlines_playwright.ts",
    "extract:all": "npm run extract:openstax && npm run extract:pathology"
  },
  "keywords": [
    "medical",
    "education",
    "anatomy",
    "histology",
    "pathology",
    "openstax"
  ],
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
