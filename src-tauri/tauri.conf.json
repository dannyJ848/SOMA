{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Biological Self",
  "version": "0.1.0",
  "identifier": "com.dannygomez.biological-self",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Biological Self",
        "width": 1024,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Medical",
    "shortDescription": "Local-first health education app",
    "longDescription": "Understand your body like a physician understands their patients. 100% private, local-first health data management.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
